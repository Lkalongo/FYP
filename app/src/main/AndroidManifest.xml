<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lorraine.fyp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <!-- need to delete this - also in login page activity -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".watchlist"
            android:label="@string/title_activity_watchlist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".finished"
            android:label="@string/title_activity_finished"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".settings" />
        <activity
            android:name=".bottomNavigation"
            android:label="@string/title_activity_bottom_navigation" />
        <activity
            android:name=".searchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".watching"
            android:label="@string/title_activity_watching"
            android:theme="@style/AppTheme.NoActionBar"></activity>

    </application>

</manifest>